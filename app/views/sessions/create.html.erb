
<div class="container">

  <h1>Welcome!</h1>

  <%= form_for :user, url: create_session_path do |f| %>
    <%= f.label :email %> </br>
    <%= f.text_field :email %>   </br>
    <%= f.label :password %></br>
    <%= f.password_field :password %></br>
    <%= f.submit "Login" %>
  <% end  %>

  <%= link_to "Create Account" new_user_path %>
</div>